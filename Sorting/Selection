#include <stdio.h>

void swap(int *a,int *b)
{
    int i,min;
    int temp = *a;
    *a = *b;
    *b = temp;
}

void SelectionSort(int a[],int n)
{
    int i,j,min;
    
    for(i=0;i<n-1;i++)
    {
       min=i;
       for(j=i+1;j<n;j++)
       {
           if(a[j]<a[i])
           {
               min=j;
           }
        if(min!=i)
        {
            swap(&a[i],&a[min]);
        }
       }
}
}

void Display(int a[],int n)
{
    for(int i=0;i<n;i++){
        printf("%d",a[i]);
    }
}
int main()
{
    int i,n;
    printf("enter the no of elements: \n");
    scanf("%d",&n);
    
    int a[n];
    printf("enter the elements: \n");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    
    SelectionSort(a,n);
    Display(a,n);
}
