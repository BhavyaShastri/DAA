#include <iostream>
using namespace std;

void LinearSearch(int n,int a[],int key){
    for(int i=0;i<n;i++){
        if(a[i]==key){
            cout<<"Element found at index:"<<i<<" ";
            break;
        }
    }
}

int main()
{
    int n;
    cout<<"Enter the no of elements:";
    cin>>n;
    
    int a[n];
    cout<<"Enter the array elements: ";
    for(int i=0;i<n;i++){
         cin>>a[i];
    }
    
    int key;
    cout<<"Enter the key element to be searched:";
    cin>>key;
    
    LinearSearch(n,a,key);
}
